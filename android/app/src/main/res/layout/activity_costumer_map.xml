<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.amanciodrp.yellotaxi.customeractivity.CustomerMapActivity">

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menu_yellow"
            android:elevation="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:menu_openDirection="down"
            fab:menu_labels_position="right"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            fab:layout_constraintStart_toStartOf="parent"
            fab:layout_constraintTop_toTopOf="parent"
            fab:menu_animationDelayPerItem="0"
            fab:menu_colorNormal="@color/idle_dot"
            fab:menu_colorPressed="@color/idle_dot"
            fab:menu_colorRipple="@color/idle_dot"
            fab:menu_icon="@drawable/ic_menu_white_24dp"
            fab:menu_shadowColor="#444">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logout"
                fab:fab_colorNormal="@color/white"
                fab:fab_size="mini"
                fab:fab_colorPressed="@color/idle_dot"
                fab:fab_label="DÃ©connexion" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_circle_grey_24dp"
                fab:fab_size="mini"
                fab:fab_colorNormal="@color/white"
                fab:fab_colorPressed="@color/idle_dot"
                fab:fab_label="Mon compte" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_list_list_24dp"
                fab:fab_size="mini"
                fab:fab_colorNormal="@color/white"
                fab:fab_colorPressed="@color/idle_dot"
                fab:fab_label="Mes courses" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/payement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_payment_grey_24dp"
                fab:fab_size="mini"
                fab:fab_colorNormal="@color/white"
                fab:fab_colorPressed="@color/idle_dot"
                fab:fab_label="Moyens de paiement" />

        </com.github.clans.fab.FloatingActionMenu>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/myLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:src="@drawable/ic_my_location_black_24dp"
            fab:backgroundTint="@color/white"
            fab:fabSize="mini"
            fab:layout_constraintBottom_toTopOf="@+id/cardView"
            fab:layout_constraintEnd_toEndOf="parent"
            fab:layout_constraintHorizontal_bias="1.0"
            fab:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fab:cardBackgroundColor="@color/white"
            fab:cardCornerRadius="5dp"
            fab:layout_constraintBottom_toBottomOf="@+id/map"
            fab:layout_constraintEnd_toEndOf="parent"
            fab:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:elevation="3dp"
                android:orientation="vertical"
                fab:layout_constraintBottom_toBottomOf="@+id/map">

                <ProgressBar
                    android:id="@+id/prg_search_driver"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_alignParentEnd="true"
                    android:elevation="10sp"
                    android:indeterminateTint="@color/idle_dot"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/white_card_corner_background"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp">

                    <TextView
                        android:id="@+id/start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_adress"
                        android:textColor="@android:color/black"
                        android:visibility="gone" />

                    <!--
                    <fragment
                        android:id="@+id/place_autocomplete_fragment"
                        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                        android:layout_width="match_parent"

                        android:layout_height="30dp" />
                        -->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/black"
                        android:fontFamily="@font/arial"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/destination_txt"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_blue_dark" />

                    <fragment android:id="@+id/place_autocomplete_fragment2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/driverInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/driverProfileImage"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:padding="20sp"
                        android:src="@mipmap/ic_default_user" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="40dp">

                        <TextView
                            android:id="@+id/driverName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="20sp"
                            android:paddingBottom="10sp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/driverPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="20sp"
                            android:paddingBottom="10sp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/driverCar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="20sp"
                            android:paddingBottom="10sp"
                            android:textColor="@color/black" />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:numStars="5"
                            android:stepSize="0.1" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/request"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/UberX"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UberX" />

                        <RadioButton
                            android:id="@+id/UberBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UberBlack" />

                        <RadioButton
                            android:id="@+id/UberXl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UberXl" />
                    </RadioGroup>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/request"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/login_yellow_button_background"
                        android:drawableEnd="@drawable/ic_send_white_24dp"
                        android:fontFamily="@font/arial"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/ask_taxi"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
